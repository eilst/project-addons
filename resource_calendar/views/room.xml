<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_resource_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">resource_calendar.room</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="room_sub_menu"
              name="Rooms"
              parent="resource.menu_resource_config"
              action="action_resource_room"
              sequence="14"/>

     <record id="resource_room_tree" model="ir.ui.view">
        <field name="name">Room Tree</field>
        <field name="model">resource_calendar.room</field>
        <field name="arch" type="xml">
            <tree string="room">
                <field name='name'/>
                <field name='id_room'/>
                <field name='capacity'/>
                <field name='description'/>
                <field name='room_type'/>
                <field name='is_bookable'/>
                <field name='sector'/>
                <field name='instruments_ids'/>
            </tree>
        </field>
    </record>


    <record id="resource_calendar_room_form" model="ir.ui.view">
        <field name="name">Room Form</field>
        <field name="model">resource_calendar.room</field>
        <field name="arch" type="xml">
            <form string="Room">
                <sheet>
                    <div>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <div align="right">
                        <h1>
                            <field name="id_room" placeholder='ID'/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="capacity" />
                            <field name="room_type"/>
                            <field name="is_bookable"/>
                            <field name="sector" />
                            <field name="instruments_ids" />
                        </group>
                        <group>        
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks">
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Pricing">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
