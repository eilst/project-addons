<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_activity_category_type" model="ir.actions.act_window">
        <field name="name">Activity Category</field>
        <field name="res_model">activity.category.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="project_event_activity_categories_menu"
              name="Activity Categories"
              parent="project_event_configuration_menu"
              action="action_activity_category_type"/>

    <record id="activity_category_form" model="ir.ui.view">
        <field name="name">Category Form</field>
        <field name="model">activity.category.type</field>
        <field name="arch" type="xml">
            <form string="Activity Category Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="activity_category_tree" model="ir.ui.view">
        <field name="name">Category Tree</field>
        <field name="model">activity.category.type</field>
        <field name="arch" type="xml">
            <tree string="Activity Category Type">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>
</odoo>
